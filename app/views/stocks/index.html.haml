%br/


%table.table.table-striped
  %tr
    %th Name
    %th Symbol
    %th Price Paid
    %th +/-%
    %th P/E
    %th Dividend
    - @stock.each do |stocks|
      - mystock = StockQuote::Stock.quote(stocks.symbol)
      %tr
        %td= link_to mystock.name, stocks # Name
        %td= link_to stocks.symbol, stocks # Symbol
        %td= mystock.last_trade_price_only #Price Paid
        - if mystock.percent_change.include? "-"
          %td.red= mystock.percent_change # Percentage -
        - else
          %td.green= mystock.percent_change # Percentage +
        %td= mystock.pe_ratio # P/E Ratio
        %td= mystock.dividend_yield # Divident yield
